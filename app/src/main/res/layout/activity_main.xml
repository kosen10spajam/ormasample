<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="xyz.dokup.ormasample.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_mac_address"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="@string/mac_address"
        android:layout_toStartOf="@+id/btn_create"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create"
        android:id="@+id/btn_create"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/edit_pass_code"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_uuid"
        android:layout_below="@+id/edit_mac_address"
        android:layout_alignParentStart="true"
        android:hint="@string/uuid"
        android:layout_toStartOf="@+id/btn_create"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_name"
        android:layout_below="@+id/edit_uuid"
        android:layout_alignParentStart="true"
        android:hint="@string/name"
        android:layout_alignEnd="@+id/edit_uuid"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_pass_code"
        android:layout_below="@+id/edit_name"
        android:layout_alignParentStart="true"
        android:hint="@string/pass_code"
        android:layout_alignEnd="@+id/edit_name"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/edit_pass_code"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
